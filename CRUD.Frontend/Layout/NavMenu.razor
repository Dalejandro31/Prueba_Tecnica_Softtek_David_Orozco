@inherits LayoutComponentBase

<div class="top-row ps-3 navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">CRUD.Frontend</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass bg-dark text-white" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        <!-- Home -->
        <div class="nav-item px-3 pt-2">
            <NavLink class="nav-link text-white" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill"></span> Home
            </NavLink>
        </div>

 

        <!-- Separador visual (opcional) -->
        <hr class="border-secondary my-2" />

        <!-- Sección de Autores -->
        <div class="nav-item px-3">
            <NavLink class="nav-link text-white" href="autores">
                <span class="bi bi-people-fill"></span> Ver Autores
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link text-white" href="autores/crear">
                <span class="bi bi-person-plus-fill"></span> Crear Autor
            </NavLink>
        </div>

        <hr class="border-secondary my-2" />

        <!-- Sección de Libros -->
        <div class="nav-item px-3">
            <NavLink class="nav-link text-white" href="libros">
                <span class="bi bi-book-fill"></span> Ver Libros
            </NavLink>
        </div>
        <div class="nav-item px-3 pb-2">
            <NavLink class="nav-link text-white" href="libros/crear">
                <span class="bi bi-journal-plus"></span> Crear Libro
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : "show";

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
